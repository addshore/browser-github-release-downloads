{
  "manifest_version": 2,

  "name": "GitHub Release Downloads",
  "description": "This extension displays the number of downloads GitHub releases have on the releases page.",
  "version": "1.0.0",
  "icons": {
    "16": "icon16.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "permissions": [
     "tabs", "*://github.com/*/*/releases", "*://github.com/*/*/releases/tag/*"
  ],
  "content_scripts": [
	{
      "matches": [
        "*://github.com/*/*/releases",
        "*://github.com/*/*/releases/tag/*"
      ],
      "js": ["releases.js"],
	  "run_at": "document_end"
    }
  ]
}